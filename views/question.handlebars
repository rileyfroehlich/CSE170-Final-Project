<!doctype html>

<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/home.css" rel="stylesheet">
    
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
    <script src="/js/question.js"></script>
</head>

<body>
	<div class="container">
        <div class="top-bar">
            <div class="flex-container-top-info">
                <div class="difficulty-setting">
                    {{description}}
                </div>
            </div>
        </div>

        <div class="info">

        </div>

        <div class="question">
            {{{question}}}
        </div>
   
        <div class="question-prompt">
            {{question-prompt}}
        </div>
        
        <div class="flex-container-answer-choices">

            <div class="column-answer-choice">
                <button class="answer-choice" id="answer-choice-1">{{{answer-choice-1}}}</button>
            </div>
            <div class="column-answer-choice">
                <button class="answer-choice" id="answer-choice-2" onclick="answer_select()">{{{answer-choice-2}}}</button>
            </div>
            <div class="column-answer-choice">
                <button class="answer-choice" id="answer-choice-3" onclick="answer_select()">{{{answer-choice-3}}}</button>
            </div>
            <div class="column-answer-choice">
                <button class="answer-choice" id="answer-choice-4" onclick="answer_select()">{{{answer-choice-4}}}</button>
            </div>
        
        </div>

        <div class="row" id="display-outcome">
        </div>
        <!--INSERT NEXT LESSON BUTTON IF POSSIBLE-->
        <div class="row" id="back-button" style="display: none">
            <a class="link" href="../home">Back to Lesson Plan</a>
        </div>

        <div id="correct-answer" style="display: none">
            {{correct-answer}}
        </div>

        <div class="navbar">
            <div class="navbar-cell">
                <a class="active" href="../home"><img src="../imgs/lessons-logo.png" class="img"></a>
            </div>
            <div class="navbar-cell">
                <a href="#profile"> <img src="../imgs/profile-logo.png" class="img"></a>
            </div>
            <div class="navbar-cell">
                <a href="#leaderboard"><img src="../imgs/leaderboards-logo.png" class="img"></a>
            </div>
            <div class="navbar-cell">
                <a href="#store"> <img src="../imgs/store-logo.png" class="img"></a>
            </div>
        </div>
    </div>

</body>
</html>